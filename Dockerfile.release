ARG DEBIAN_VERSION
FROM debian:${DEBIAN_VERSION}

RUN apt-get update && apt-get install -y --no-install-recommends \
  ffmpeg \
  && rm -rf /var/lib/apt/lists/*

ENV LANG=C.UTF-8

ADD ./_build/prod/prod-*.tar.gz /app/

WORKDIR /app/
EXPOSE 4000
VOLUME "/app/build/videos"
CMD ["bin/prod", "start"]
ARG GIT_COMMIT
ENV GIT_COMMIT=${GIT_COMMIT}
