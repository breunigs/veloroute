<meta name="robots" content="noindex">

<%= content_tag :h3, "Suche ğŸ”", for: :query %>
<%= tag :input,
  id: "search",
  value: @search_query,
  type: :search,
  phx_keyup: :search,
  phx_hook: :focus,
  phx_debounce: 500,
  autofocus: true,
  placeholder: "z.B. FeldstraÃŸe, StadtRAD, Baustelleâ€¦"
%>

<%
map = Mapbox.search(@search_query, @search_bounds)
art = VelorouteWeb.VariousHelpers.article_search(@search_query)

results = SearchResult.sort_merge(map, art) |> Enum.take(15)
%>

<%= if length(results) >= 1 do %>

<ul>
<%= for result <- results do %>
  <li>
    <div>
      <!-- relevance: {result.relevance} -->
      <!-- type: {result.type} -->
      <%= SearchResult.to_html(result) %>
      <%= if result.subtext do %>
        <div class="aside"><%= result.subtext %></div>
      <% end %>
    </div>
  </li>
<% end %>
</ul>

<% else %>

<p>Leider keine Ergebnisse.</p>

<% end %>
